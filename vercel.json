{
  "version": 2,
  "framework": "vite",
  "installCommand": "npm install && cd packages/dashboard && npm install --include=dev",
  "buildCommand": "cd packages/dashboard && npm run build",
  "outputDirectory": "packages/dashboard/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/v1/(.*)", "destination": "/api/index.ts" },
    { "source": "/health", "destination": "/api/index.ts" }
  ]
}
